<div class="container text-center">
  <img src="/assets/img/burger.png" alt="burger picture">

  <h1 class="text-danger m-3">Eat-Da-Burger!</h1>

  <div class="row">
    <div class="col">

      <h2>Burgers to be devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers have been devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h4 class="m-3">Enter a burger you want to eat and click the "Submit" button</h4>
  <form class="create-form">
    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <div class="row justify-content-center">
        <textarea class="form-control col-4" id="burger" name="name" rows="3"></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Add New Burger</button>
  </form>

</div>